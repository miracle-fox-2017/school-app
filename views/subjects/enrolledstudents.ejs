<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Enrolled Students</title>
  </head>
  <body>
    <a href="/">Home</a>
    <a href="/teachers">Teachers</a>
    <a href="/subjects">Subjects</a>
    <a href="/students">Students</a>

    <table>
      <thead>
        <tr>
          <th>No</th>
          <th>ID Stud</th>
          <th>Student Name</th>
          <th>Score</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% dataStudentSubject.forEach((student, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= student.StudentId %></td>
            <td><%= student.fullName %></td>
            <td>
              <% if(student.score) { %>
                <%= student.score %>
              <% } else { %>
                <a href="/subjects/<%= student.id %>/givescore">Give Score</a>
              <% } %>
            </td>
            <td></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
