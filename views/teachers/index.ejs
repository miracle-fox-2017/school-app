<!DOCTYPE html>
<html>
  <%include ../partial/head.ejs%>
  <body>
    <table>
      <tbody>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Option</th>
        </tr>
      </tbody>
      <tbody>
        <%teachers.forEach(teacher => {%>
          <tr>
            <td><%=teacher.id%></td>
            <td><%=teacher.first_name%></td>
            <td><%=teacher.last_name%></td>
            <td><%=teacher.email%></td>
            <td>
              <a href="/teachers/edit/<%=teacher.id%>">edit</a>
              <a href="/teachers/delete/<%=teacher.id%>">delete</a>
            </td>
          </tr>
        <%})%>
      </tbody>
    </table>
    <a href="/teachers/add">add new</a>
  </body>
</html>
