<%- include ../partials/header %>
  <body>
    <%- include ../partials/navbar %>
    <table>
      <thead>
        <tr>
          <th>No</th>
          <th>ID Teach</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Full Name</th>
          <th>Email</th>
          <th>Subject</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% dataTeachers.forEach((data, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= data.id %></td>
            <td><%= data.first_name %></td>
            <td><%= data.last_name %></td>
            <td><%= data.getFullName() %></td>
            <td><%= data.email %></td>
            <td><%= data.teacherSubject ? data.teacherSubject.subject_name : "Unassigned" %></td>
            <td>
              <a href="/teachers/edit/<%= data.id %>">Edit</a>
              <a href="/teachers/delete/<%= data.id %>">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <a href="/teachers/add">Add Teacher</a>
  </body>
</html>
