<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Teachers Page</title>
  </head>
  <body>
    <a href="/">Home</a>
    <a href="/teachers">Teachers</a>
    <a href="/subjects">Subjects</a>
    <a href="/students">Students</a>
    <table>
      <thead>
        <tr>
          <th>Id</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Subject</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% dataTeachers.forEach((data, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= data.first_name %></td>
            <td><%= data.last_name %></td>
            <td><%= data.email %></td>
            <td><%= data.teacherSubject ? data.teacherSubject.subject_name : "Unassigned" %></td>
            <td>
              <a href="/teachers/edit/<%= data.id %>">Edit</a>
              <a href="/teachers/delete/<%= data.id %>">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <a href="/teachers/add">Add Teacher</a>
  </body>
</html>
