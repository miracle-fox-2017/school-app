<!DOCTYPE html>
<html>
  <%include ../partial/head.ejs%>
  <body>
    <div class="ui container" style="margin-top:3em;">
      <h1><%=title%> List</h1>
      <%include ../partial/menu.ejs%>
      <div class="column">
        <table class="ui celled selectable right aligned table">
          <thead class="left aligned">
            <th class="center aligned">NO</th>
            <th class="center aligned">ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Option</th>
          </tr></thead>
          <tbody class="left aligned">
            <%teachers.forEach((teacher,i) => {%>
              <tr>
                <td class="center aligned"><%=i+1%></td>
                <td class="center aligned"><%=teacher.id%></td>
                <td><%=teacher.first_name%></td>
                <td><%=teacher.last_name%></td>
                <td><%=teacher.email%></td>
                <td>
                  <a href="/teachers/edit/<%=teacher.id%>">edit</a>
                  <a href="/teachers/delete/<%=teacher.id%>">delete</a>
                </td>
              </tr>
              <%})%>
          </tbody>
        </table>
      </div>
      <a class="ui primary button" href="/teachers/add" style="margin-top:20px;">add new</a>
    </div>
  </body>
</html>
