<!DOCTYPE html>
<html>
  <%include ../partial/head.ejs%>
  <body>
    <div class="ui container" style="margin-top:3em;">
      <h1><%=title%> List</h1>
      <%include ../partial/menu.ejs%>
      <div class="column">
        <table class="ui celled selectable right aligned table">
          <thead class="left aligned">
            <th class="center aligned one wide">NO</th>
            <th class="center aligned one wide">ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Subject</th>
            <th class="center aligned three wide">Option</th>
          </tr></thead>
          <tbody class="left aligned">
            <%teachers.forEach((teacher,i) => {%>
              <tr>
                <td class="center aligned"><%=i+1%></td>
                <td class="center aligned"><%=teacher.id%></td>
                <td><%=teacher.first_name%></td>
                <td><%=teacher.last_name%></td>
                <td><%=teacher.email%></td>
                <td>
                  <%if(teacher.Subject){%>
                    <%=teacher.Subject.subject_name%>
                  <%}else{%>
                    unassign
                  <%}%>
                </td>
                <td class="center aligned">
                  <div class="ui buttons">
                    <a class="ui blue button" href="/teachers/edit/<%=teacher.id%>">Edit</a>
                    <div class="or"></div>
                    <a class="ui red button" href="/teachers/delete/<%=teacher.id%>">Delete</a>
                  </div>
                </td>
              </tr>
              <%})%>
          </tbody>
          <tfoot class="full-width">
            <tr>
              <th colspan="6">
                <a href="/teachers/add">
                  <div class="ui left floated small primary labeled icon button">
                    <i class="user icon"></i> Add Teacher
                  </div>
                </a>
              </th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </body>
</html>
