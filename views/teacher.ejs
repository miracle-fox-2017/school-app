<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>HALAMAN TEACHER</title>

    <style type = "text/css">

      table {
        background-color: brown;
        font-family: Calibri;
        width : 100%;
      }

      tr {
        color : white;
      }

      td {
        color: white;
        text-align:  center;
      }

      fieldset {
        width : 70%;
      }

      a {
        text-decoration: none;
        color : white;
      }

    </style>
  </head>
  <body style="background-color : aquamarine">
    <fieldset>
      <legend><b>Data Teacher</b></legend>
    <table border = "1">
      <thead>
        <th><b>Id</b></th>
        <th><b>First Name</b></th>
        <th><b>Last Name</b></th>
        <th><b>E-mail</b></th>
        <th><b>EDIT DATA</b></th>
        <th><b>DELETE DATA</b></th>
      </thead>

      <tbody>
        <% for(let i = 0 ; i < rowTeachers.length ; i++) { %>
          <tr>
            <td><%= rowTeachers[i].id %></td>
            <td><%= rowTeachers[i].first_name %></td>
            <td><%= rowTeachers[i].last_name %></td>
            <td><%= rowTeachers[i].email %></td>
            <td><a href = '/teachers/edit/<%= rowTeachers[i].id %>'>EDIT</a></td>
            <td><a href = '/teachers/delete/<%= rowTeachers[i].id %>'>DELETE</a></td>
          </tr>
        <%}%>
      </tbody>

    </table>
    </fieldset>
  </body>
</html>
