<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Students</title>
  </head>
    <style media="screen">
    table, th, td {
    border: 1px solid black;
    }
    </style>
  <body>
    <table>
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>full name</th>
        <th>Email</th>
        <th>Subject</th>
        <th>action</th>
      </tr>
        <% let i = 1 %>
        <% rows.forEach(function(row){%>
      <tr>
        <td> <%= i %> </td>
        <td> <%= row.first_name %> </td>
        <td> <%= row.last_name %> </td>
        <td> <%= row.getFullname() %> </td>
        <td> <%= row.email %> </td>
        <td><a href="/students/<%= row.id%>/addsubject">Add Subjects</a></td>
        <td> <a href="/students/edit/<%=row.id%>"> edit</a> <a href="/students/delete/<%=row.id%>">delete</a> </td>
        <% i++ %>
        <% }) %>
        <a href="/students/add" class="btn btn-default">add students</a>
      </tr>
    </table>
  </body>
</html>
