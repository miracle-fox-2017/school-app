<%- include("./partials/navigation", {title : "Student"}) %>
<body class="body">
<h1> ALL STUDENT DATA</h1>
<h4> <a href ="/students/add"> add student</a>	</h4>	
	<table border="1" width="100%">
		<thead>
			<tr>
				<th> No </th>
				<th> id </th>
				<th> first_name </th>
				<th> last_name </th>
				<th> fullname </th>
				<th> email </th>
				<th colspan="3"> options </th>
			</tr>
		</thead>
		<tbody>
			<% allStudents.forEach((student, index) => {%>	
			<tr>
				<td> <%= index+1 %> </td>
				<td> <%= student.id %> </td>
				<td> <%= student.first_name  %> </td>
				<td> <%= student.last_name  %> </td>
				<td> <%= student.getFullName() %> </td>
				<td> <%= student.email  %> </td>
				<td> <a href="/students/<%= student.id %>/addsubject"> add subject </a></td>
				<td> <a href="/students/edit/<%= student.id %>"> edit </a></td>
				<td> <a onclick= "return deleteConfirm()" href="/students/delete/<%= student.id %>"> hapus </a></td>	
			</tr>	
			<%})%>
		</tbody>	
	</table>	
	<script type="text/javascript">
		function deleteConfirm(){
			let ask = confirm("Delete this Student? ");
			if (ask == true) return true;
			else return false;
		}
	</script>
</body>

<style type="text/css">
	.body {
		text-align: center;
	}
</style>