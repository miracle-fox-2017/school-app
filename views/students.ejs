<% include ./partials/head %>
  <title>Students</title>
</head>
<body>
  <% include ./partials/menu %>
  <section class="hero is-info is-medium">
  <div class="hero-body">
    <table class="table is-bordered is-striped is-narrow is-fullwidth">
      <tr>
        <th class="is-link">No</th>
        <th class="is-link">Full Name</th>
        <th class="is-link">Email</th>
        <th class="is-link" colspan="3">Actions</th>
      </tr>
      <%dataStudents.forEach((Student, index)=>{%>
        <tr>
          <th><%=index + 1%></th>
          <td><%=Student.getFullname()%></td>
          <td><%=Student.email%></td>
          <td>
            <a href="/students/<%=Student.id%>/addsubject">
                <span class="has-text-link">
                  <i>Add Subject</i>
                </span>
            <a>
          </td>
          <td>
            <a href="/students/edit/<%=Student.id%>">
              <span class="icon has-text-success">
                <i class="fa fa-pencil-square-o"></i>
              </span>
            <a>
          </td>
          <td>
            <a onclick="return confirm('Delete this student?');" href="/students/delete/<%=Student.id%>">
              <span class="icon has-text-danger">
                <i class="fa fa-trash"></i>
              </span>
            <a>
          </td>
        </tr>
      <%})%>
    </table>
  </div>
  </section>
</body>
</html>
