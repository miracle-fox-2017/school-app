<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Students</title>
  </head>
  <body>
    <a href="/students/add">Add Student</a>
    <table>
      <tr>
        <th>No</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Full Name</th>
        <th>Email</th>
        <th>Subject</th>
        <th colspan="2">Action</th>
      </tr>
      <% let i = 1;
      results.map((result) => { %>
        <tr>
        <td><%=i%></td>
        <td><%=result.first_name%></td>
        <td><%=result.last_name%></td>
        <td><%=result.getFullName()%></td>
        <td><%=result.email%></td>
        <td><a href="/students/<%=result.id%>/addSubject">Add Subject</a></td>
        <td><a href="/students/edit/<%=result.id%>">Edit</a></td>
        <td><a href="/students/delete/<%=result.id%>">Delete</a></td>
        </tr>
      <% i++;})%>
    </table>
  </body>
</html>