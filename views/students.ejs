<% include ./partials/head %>
  <title>Students</title>
</head>
<body>
  <% include ./partials/menu %>
  <section class="hero is-info is-medium">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h3 class="subtitle">
          <a href="/students/add" class="button is-light">
             add student
          </a>
      </h3>
    </div>
    <br/>
    <table class="table is-bordered is-striped is-narrow is-fullwidth">
      <tr>
        <th class="is-link">Id</th>
        <th class="is-link">Full Name</th>
        <th class="is-link">Email</th>
        <th class="is-link" colspan="2">Actions</th>
      </tr>
      <%dataStudents.forEach(Student=>{%>
        <tr>
          <td><%=Student.id%></td>
          <td><%=Student.getFullname()%></td>
          <td><%=Student.email%></td>
          <td>
            <a href="/students/edit/<%=Student.id%>">
              <span class="icon has-text-success">
                <i class="fa fa-pencil-square-o"></i>
              </span>
            <a>
          </td>
          <td>
            <a onclick="return confirm('Delete this student?');" href="/students/delete/<%=Student.id%>">
              <span class="icon has-text-danger">
                <i class="fa fa-trash"></i>
              </span>
            <a>
          </td>
        </tr>
      <%})%>
    </table>
  </div>
  </section>
</body>
</html>
