<%- include partial/head %>
      <div class="">
        <div class="text-center">
          <h1>Students Data</h1>
          <a href="/students/add">Add Student</a>
        </div>
        <hr>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>NO.</th>
              <th>ID</th>
              <th>Firts Name</th>
              <th>Last Name</th>
              <th>Full Name</th>
              <th>Email</th>
              <th>Action</th>
              <th>Option</th>
            </tr>
          </thead>
          <% let no = 1 %>
          <% rows.forEach(data=>{%>
          <tbody>
            <tr>
              <td><%= no %></td>
              <td><%= data.id %></td>
              <td><%= data.first_name %></td>
              <td><%= data.last_name %></td>
              <td><%= data.getFullName() %></td>
              <td><%= data.email %></td>
              <td class="text-center"><a href="/students/<%= data.id %>/addsubject">Add Subject</a></td>
              <td class="text-center"><a href="/students/edit/<%= data.id%>">Edit</a> || <a href="/students/delete/<%= data.id%>" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a></td>
            </tr>
          </tbody>
          <% no++ });%>
        </table>
      </div>
    </div>
  </body>
</html>
