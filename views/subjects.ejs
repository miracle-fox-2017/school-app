<%- include('partial/header', {title: title}) %>
  <body>
    <h1>Subjects Data</h1>
    <table border="1">
      <tr>
        <th>No</th>
        <th>Id</th>
        <th>Subject Name</th>
        <th>Teachers</th>
        <th>Action</th>
        <th>Options</th>
      </tr>
      <% subjects.forEach((s,i)=>{ %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= s.id %></td>
          <td><%= s.subject_name %></td>
          <td>
            <ol>
            <% s.teachers.forEach(t=>{ %>
              <li><%= t.full_name %></li>
            <% }) %>
            </ol>
          </td>
          <td><a href="/subjects/<%= s.id %>/enrolledstudents">Enrolled Students</a></td>
          <td><a href="/subjects/edit/<%= s.id %>">Edit</a> | <a href="/subjects/delete/<%= s.id %>">Delete</a></td>
        </tr>
      <% }) %>
    </table>
    </br><a href="/subjects/add">add subjects</a>
  </body>
</html>