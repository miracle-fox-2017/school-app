<%- include('./partials/head', {pageTitle:pageTitle}) %>
<%- include('./partials/header') %>

  <body>
    <form action="/teachers/edit/<%=teacherData.id%>" method="post">
      <table>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Subject</th>
        </tr>
        <tr>
          <td><input type="text" name="first_name" value="<%=teacherData.first_name%>"></td>
          <td><input type="text" name="last_name" value="<%=teacherData.last_name%>"></td>
          <td><input type="text" name="email" value="<%=teacherData.email%>"></td>
          <td>
            <select name = "SubjectId">
              <%subjectsData.forEach(subject => {
                if (teacherData.SubjectId === subject.id) { %>
                  <option value="<%=subject.id%>" selected><%=subject.subject_name%></option>
                <%} else { %>
                  <option value="<%=subject.id%>"><%=subject.subject_name%></option>
                <%}%>
              <%})%>
            </select>
          </td>
        </tr>
        <tr>
          <td colspan="4" align="right"><input type="submit" value="Edit"></td>
        </tr>
      </table>
    </form>
  </body>
</html>