<!DOCTYPE html>
<html>
  <%include ../partial/head.ejs%>
  <body>
    <div class="ui container" style="margin-top:3em;">
      <h1><%=title%> List</h1>
      <%include ../partial/menu.ejs%>
      <div class="column">
        <table class="ui celled selectable right aligned table">
          <thead class="left aligned">
            <th class="center aligned">NO</th>
            <th class="center aligned">ID</th>
            <th>Fisrt Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Full Name</th>
            <th>Option</th>
          </tr></thead>
          <tbody class="left aligned">
            <%students.forEach((student,i) => {%>
              <tr>
                <td class="center aligned"><%=i+1%></td>
                <td class="center aligned"><%=student.id%></td>
                <td><%=student.first_name%></td>
                <td><%=student.last_name%></td>
                <td><%=student.email%></td>
                <td><%=student.getFullname()%></td>
                <td>
                  <a href="/students/edit/<%=student.id%>">edit</a>
                  <a href="/students/delete/<%=student.id%>">delete</a>
                </td>
              </tr>
            <%})%>
          </tbody>
        </table>
      </div>
      <a class="ui primary button" style="margin-top:20px;" href="/students/add">add new</a>
    </div>
  </body>
</html>
