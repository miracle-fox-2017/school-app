<% include partials/head %>

    <body>
        <header>
            <% include partials/menu%>
                <h3>Students Data</h3>
        </header>

        <div class="main-table">
            <table>
                <tr>
                    <th>ID</th>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Full Name
                    </th>
                    <th>
                        Subjects
                    </th>
                    <th colspan="2">
                        Action
                    </th>
                </tr>
                <% dataStudents.forEach((student)=>{%>
                    <tr>
                        <td>
                            <%= student.id%>
                        </td>
                        <td>
                            <%= student.first_name%>
                        </td>
                        <td>
                            <%= student.last_name%>
                        </td>
                        <td>
                            <%= student.email%>
                        </td>
                        <td>
                            <%= student.getFullName()%>
                        </td>
                        <td>
                            <a href="/students/<%= student.id%>/addsubject">Add Subject</a>
                        </td>
                        <td>
                            <a href="/students/edit/<%= student.id%>"> Edit</a>
                        </td>
                        <td>
                            <a href="/students/delete/<%= student.id%>">Delete</a>
                        </td>
                    </tr>
                    <% })%>
            </table>
        </div>

        <a href="/students/add"> Add Student </a>
    </body>

    </html>