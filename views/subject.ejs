<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>HALAMAN SUBJECT</title>

    <style type = "text/css">

      table {
        background-color: brown;
        font-family: Calibri;
        width : 100%;
      }

      tr {
        color : white;
      }

      td {
        color: white;
        text-align:  center;
      }

      fieldset {
        width : 60%;
      }

      a {
        text-decoration: none;
        color : white;
      }

      a:hover {
        color : grey;
      }

    </style>

  </head>
  <body style="background-color : aquamarine">
    <fieldset>
      <legend><b> DATA SUBJECT </b></legend>
    <table border = "1">
      <thead>
        <th><b>Id</b></th>
        <th><b>Subject Name</b></th>
        <th><b>Teacher</b></th>
        <th><b>Action</b></th>
      </thead>

      <tbody>
        <% for(let i = 0 ; i < rowSubjects.length ; i++) { %>
          <tr>
            <td><%= rowSubjects[i].id %></td>
            <td><%= rowSubjects[i].subject_name %></td>
            <td>
              <ol>
                <% for(let j = 0 ; j < rowSubjects[i].Teachers.length ; j++) { %>
                  <li>
                    <%= rowSubjects[i].Teachers[j].first_name %>
                    <%= rowSubjects[i].Teachers[j].last_name %>
                  </li>
            <% } %>

          </td>

          <td><a href= "/subjects/<%= rowSubjects[i].id %>/enrolledstudents">Enrolled Students</a></td>
          </tr>

        <%}%>
      </tbody>

    </table>
  </fieldset>
  </body>
</html>
