<%include partials/head%>

    <body>

        <head>
            <% include partials/menu%>
                <h3>Subjects Data</h3>
        </head>

        <div class="main-table">
            <table>
                <tr>
                    <th>No</th>
                    <th>
                        Id
                    </th>
                    <th>
                        Subject Name
                    </th>
                    <th>
                        Teachers
                    </th>
                    <th colspan="3">
                        Action
                    </th>
                </tr>
                <% dataSubjects.forEach((subject, index)=>{%>
                    <tr>
                        <td>
                            <%= index+1%>
                        </td>
                        <td>
                            <%= subject.id%>
                        </td>
                        <td>
                            <%= subject.subject_name%>
                        </td>

                        <td>
                            <ol>
                                <% subject.Teachers.forEach((teacher)=>{%>
                                    <li>
                                        <%= teacher.getFullName()%>

                                    </li>
                                    <%})%>
                            </ol>
                        </td>


                        <td>
                            <a href="/subjects/<%= subject.id%>/enrolledstudents"> Enrolled Students</a>
                        </td>
                        <td>
                            <a href="/subjects/edit/<%= subject.id%>"> Edit</a>
                        </td>
                        <td>
                            <a href="/subjects/delete/<%= subject.id%>"> Delete</a>
                        </td>
                    </tr>
                    <%})%>

            </table>
        </div>
        <a href="/subjects/add">
            Add Subject
        </a>
    </body>

    </html>