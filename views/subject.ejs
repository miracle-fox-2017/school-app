<%- include("partials/header.ejs",{title:"Subject"}) %>

    <a href="/subjects/add">Add</a>
    <table border="1">
        <tr>
            <td>No</td>
            <td>Subject</td>
            <td>Teachers</td>
            <td>Action</td>
        </tr>
    <% 
    
    let no = 1;

    dataSubjects.forEach(rows => { 
        
    %>

        <tr>
            <td><%= no %></td>
            <td><%= rows.subject_name %></td>
            <td>
                <%
                    let nomor = 1; 
                    rows.teachers.forEach((row) => { 
                %>

                    <%= nomor %> <%= row.getFullname() %><br />

                <%
                
                 nomor++
            
                }) 
                
                %>
            </td>
            <td>
                <a href="/subjects/<%= rows.id %>/enrolledstudents">Enrolled Students</a>
            </td>
        </tr>

    <% 

    no++;

    });
    
    %>
    </table>
